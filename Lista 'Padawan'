// ATENÇÃO - para testar, execute cada questão num programa individual com a definição padrão de Scanner

import java.util.Scanner;

public class Princi {

	public static void main(String[] args) {
		
		Scanner teclado = new Scanner(System.in);

		
		//QUESTÃO 1 - Cálculo de IMC
		
		double peso, altura, IMC;
		System.out.println("Olá, User! Por favor insira seu peso (em KG):");
		peso = Double.parseDouble(teclado.nextLine());
		System.out.println("Certo, agora insira sua altura (em METROS):");
		altura = Double.parseDouble(teclado.nextLine());
		IMC = peso / (Math.pow(altura, 2));
		System.out.printf("Seu IMC é %.2f \n", IMC);
		
		if(IMC < 18.5) {
			System.out.println("Tá magin, viu? tem que comer.");
			System.exit(0);
		}
		else if(IMC >= 18.5 && IMC <= 24.9) {
			System.out.println("Parabéns, você é normalíssimo");
			System.exit(0);
		}
		else if(IMC >= 25.0 && IMC <= 29.9) {
			System.out.println("Tá com sobrepeso, viu, amiguinho? Vamo fazer uns exercício aí");
			System.exit(0);
		}
		else if(IMC >= 30 && IMC <= 34.9) {
			System.out.println("Tu sabia que tu tá na obeso? Hora de fazer umas dieta, pcr");
			System.exit(0);
		}
		else if(IMC >= 35.0 && IMC <= 39.9) {
			System.out.println("Amigue, tu tá com OBESIDADE MÓRBIDA. Sabe o que é isso? TU PODE MORRER DE VEIA ENTUPIDA CARA");
			System.exit(0);
		}
		else if(IMC > 39.9) {
			System.out.println("Tem mais jeito não, já morreu faz tempo e esqueceram de enterrar.");
			System.exit(0);
		}
		else {
			System.out.println("Não foi possível classificar sua faixa de acordo com o IMC, tente novamente.");
			System.exit(0);
		}
		
		
		// QUESTÃO 2 - Cadastro e verificação de senha
		
		String senha, verif;
		int num1, num2;
		double result;
		System.out.println("\n Por favor, cadastre uma senha:");
		senha = teclado.nextLine();
		System.out.println("Beleza, agora me diz um número");
		num1 = Integer.parseInt(teclado.nextLine());
		System.out.println("Certo. Me vê mais um puifa");
		num2 = Integer.parseInt(teclado.nextLine());
		result = num1 / num2;
		System.out.println("Legal. Eu fiz a divisão entre esses dois. Para verificar o resultado, digite sua senha mais uma vez.");
		verif = teclado.nextLine();
		
		if(senha.contentEquals(verif)) {
			System.out.printf("Seu resultado é: %.1f", result);
			System.exit(0);
		}
		else{
			System.out.println("Senha incorreta.");
			System.exit(0);
		}
		
		
		// QUESTÃO 3 - Qual nome está 'mais próximo' de A
		
		String nome1, nome2, nome3, nome4, nome5, menor;
		System.out.println("Seguinte, me dá um nome aí ");
		nome1 = teclado.nextLine();
		System.out.println("Agora outro.");
		nome2 = teclado.nextLine();
		System.out.println("Mais um");
		nome3 = teclado.nextLine();
		System.out.println("Outro nome");
		nome4 = teclado.nextLine();
		System.out.println("Último nome, porfavore");
		nome5 = teclado.nextLine();
		
		if(nome1.compareTo(nome2)<0) {menor = nome1;}
		else {menor = nome2;}
		
		if(menor.compareTo(nome3)<0) {}
		else {menor = nome3;}
		
		if(menor.compareTo(nome4)<0) {}
		else {menor = nome4;}
		
		if(menor.compareTo(nome5)<0) {}
		else {menor = nome5;}
		
		System.out.println("Dos listados, o nome mais próximo de A é " + menor);
		System.exit(0);
		
		
		// QUESTÃO 4 - Verificação de senha
		
		String verifica, sen = "123456";
		System.out.println("Olá, User. Por favor, digite sua senha");
		verifica = teclado.nextLine();
		if (sen.equals(verifica)) {
		System.out.println("Acesso Liberado");
		System.exit(0);}
		else {
		System.out.println("Acesso Negado");
		System.exit(0);}
		
		
		// QUESTÃO 5 - Comparação de número de 'gols'
		
		int NacPatos, Treze;
		System.out.println("Quantos gols fez o Nacional de Patos?");
		NacPatos = Integer.parseInt(teclado.nextLine());
		System.out.println("Quantos gols fez o Treze?");
		Treze = Integer.parseInt(teclado.nextLine());
		
		if(NacPatos > Treze) {
		System.out.println("Nacional de Patos é Campeão!");
		System.exit(0);}
		else if(Treze > NacPatos) {
		System.out.println("Treze é Campeão!");
		System.exit(0);}
		else {
		System.out.println("EMPATE");
		System.exit(0);}
		
		
		// QUESTÃO 6 - Informa o dia da semana por número
		
		int dia;
		System.out.println("Insira um número de 1 a 7:");
		dia = Integer.parseInt(teclado.nextLine());
		
		switch(dia) {
		case 1:
			System.out.println("DOMINGO");
			break;
		case 2:
			System.out.println("SEGUNDA");
			break;
		case 3:
			System.out.println("TERÇA");
			break;
		case 4:
			System.out.println("QUARTA");
			break;
		case 5:
			System.out.println("QUINTA");
			break;
		case 6:
			System.out.println("SEXTA");
			break;
		case 7:
			System.out.println("SABADO");
			break;
		default:
			System.out.println("Dia da semana inválido. Tente novamente");
		}
		
		
		// QUESTÃO 7 - Informa se a soma de dois números é maior ou menor que um terceiro
		
		int A, B, C, soma;
		System.out.println("Insira o primeiro número:");
		A = Integer.parseInt(teclado.nextLine());
		System.out.println("Insira o segundo número:");
		B = Integer.parseInt(teclado.nextLine());
		System.out.println("Insira o terceiro número:");
		C = Integer.parseInt(teclado.nextLine());
		soma = A + B;
		
		if(C > soma) {
			System.out.println(C + " é maior que " + soma);
			System.exit(0);}
		else if(C == soma) { 
			System.out.println(C + " é igual a " + soma);
			System.exit(0);}
		else {
			System.out.println(C + " é menor que " + soma);
			System.exit(0);}
		
		
		// QUESTÃO 8 - Sorteia um número entre 1 e 60
		
		int sorteio;
		sorteio = (int) (Math.random() * 60);
		System.out.println(sorteio);
		System.exit(0);
		
		
		// QUESTÃO 9 - Informa os números PARES entre 1 e 20
		
		for(int i = 2; i < 20; i += 2) {
			System.out.println(i);
		}
		
		
		// QUESTÃO 10 - Cálculo da média de 10 alunos com 3 notas cada
		
		double nota1, nota2, nota3, media;
		
		for(int cont = 1; cont <= 10; cont++) {
			System.out.println("Calculo da media do aluno " + cont);
			System.out.println("Insira a primeira nota");
			nota1 = Double.parseDouble(teclado.nextLine());
			System.out.println("Insira a segunda nota");
			nota2 = Double.parseDouble(teclado.nextLine());
			System.out.println("Insira a terceira nota");
			nota3 = Double.parseDouble(teclado.nextLine());
			media = (nota1 + nota2 + nota3) / 3;
			System.out.println("A média do aluno " + cont +" é " + media + "\n");			
		}
		
	}
}
