#include <stdio.h> 
#include <stdlib.h>
#include <locale.h> 
#include <math.h>
#include <conio.h>
 
 int menu(){
 	
	//Informacaes + leitor de variavel
	int a;
	printf("\n\nAVISO: 0 finaliza o programa. \n"
	       "Selecione: "
		   "1 para o menu um\n"
		   "2 para o menu dois\n"
		   "3 para o menu tres\n"
		   "4 para o menu quatro\n"
		   "5 para o menu cinco\n"
		   "6 para o menu seis\n"
		   "7 para o menu sete\n"
		   "8 para o menu oito\n"
		   "9 para o menu nove\n"
		   "10 para o menu dez\n");
	scanf("%d", &a);
	system("cls");
	return(a);
 
 }
 
 void ParOuImpar(int numero){
 	int num;
		printf("Bem-vindo ao primeiro menu\n");  
		printf("digite um numero INTEIRO: ");
		scanf("%d",&num);
		if(num%2==0)
		{
		printf("Numero Par");
		}
		else{
		printf("Numero impar");
		}
 }
 
 int main(){               //exercicio 1
 	//definicao da lingua
 	
	 setlocale(LC_ALL, "Portuguese");
	 
	 //definicao de variaveis
	 int a, num, in, c, x, y, k, pot; 
	 float cd1, cd2, cd3, cr, media, b, n1 = 1, n2 = 2, mp;
	 long decimal, q, r;
	 int i, j = 0;
	 char hexadecimal[100];
	 char nome[45];
	 double w = 10;
	 double h = 10;
	 double logaritmo_natural = 0;
	 double logaritmo_xbase10 = 0;
 	
 	//menu a ser repetido
	a = menu();
	//Estrutura da repeticao
	
	while(a)
	{
	//Condicionais
	   
	   if(a == 1){                           //exercicio 2 - Indentifica se o numero e par ou impar
		ParOuImpar(num);
       }
	   else if(a == 2){                       //exercicio 3 - Potenciacao
	   printf("Bem-vindo ao segundo menu\n");
	   printf ("Primeiro numero? ");
     	scanf ("%d",&x);
     	printf ("Segundo numero? ");
     	scanf ("%d",&y);
 
     	for (k>0;k<y;k++)
     	{
     	pot = x*(x*k);
     	}
    	 
        printf ("\n Seu resultado e: %d", pot);
	   }
	   else if(a == 3){               
	   printf("Bem-vindo ao terceiro menu\n");    //exercicio 4 - Logaritmo
	   printf("Digite suas 2 numeros (dando 'ENTER' depois de digitar cada um) para operacao logaritmo: \n");
	   scanf("%f %f", &w, &h);  
	   logaritmo_natural = log(w);
	   
	   printf("Logaritmo natural de x %.2f = %.2f\n",w, logaritmo_natural);
	
	   logaritmo_xbase10 = log10(w);
	   printf("Logaritmo de x na base10 %.2f = %.2f\n",w, logaritmo_xbase10);
	   
	   logaritmo_natural = log(h);
	   
	   printf("Logaritmo natural de y %.2f = %.2f\n",w, logaritmo_natural);
	   
	   logaritmo_xbase10 = log10(h);
	   printf("Logaritmo de y na base10 %.2f = %.2f\n",w, logaritmo_xbase10);
	   
       }
	   else if(a == 4){                   //exercicio 5 - Indentifica se o ano e bissexto ou nao
	   printf("Bem-vindo ao quarto menu\n");
	  printf("digite um ano: ");
		scanf("%d",&num);
		if(num%4==0) 
		{
		printf("Este ano e Bissexto");
		}
		else{
		printf("Este ano nao e Bissexto");
		}
       }
	   else if(a == 5){                    //exercicio 6
	   printf("Bem-vindo ao quinto menu\n");       
	  printf("Digite suas 3 notas (dando 'ENTER' apos cada uma), para o calculo da media\n");
	   scanf("%f %f %f", &cd1, &cd2, &cd3);
	   
	         cr=(cd1*n1)+(cd2*n1)+(cd3*n2)/cd1+cd2+cd3;
	         media = (cd1 + cd2 + cd3)/3;
	         mp=(cd1*n1)+(cd2*n1)+(cd3*n2)/1+2+3;
	   
	   printf("Sua media e %f\n", media);
	   printf("Media ponderada e %f\n", mp);
	   printf("Seu CRE e %f\n", cr);
	   if(media>=6.0){
	   	printf("Parabens, voce foi aprovado!");
	   }
	   else
	   printf("Infelizmente, voce foi reprovado!");
       }
	   else if(a == 6){                      //exercicio 7
	   printf("Bem-vindo ao sexto menu\n");
	     printf("Digite suas 2 notas, para o calculo da media\n");
	   scanf("%f %f", &cd1, &cd2);  
	   media = (cd1 + cd2)/2;
	   
	   if(cd1>0 && cd1<=10 && cd2>0 && cd2<=10){
	   	printf("Sua media e %f", media);
       }
       else{
       	printf("NOTA INVALIDA\n");
	   } 
        
       }
	   else if(a == 7){
	   printf("Bem-vindo ao setimo menu\n");
  	   }
	   else if(a == 8){
	   printf("Bem-vindo ao oitavo menu\n");
	   }
	   else if(a == 9){
	   printf("Bem-vindo ao nono menu\n");
	   }
	   else if(a == 10){                    //exercicio 8 - matricula em hexa-decimal e a repitacao do nome
	   printf("Bem-vindo ao d?cimo menu\n");
       printf("Informe sua matricula, por favor: \n");
	   scanf("%ld", &decimal);
	   printf("Informe seu nome, por favor: ");
	   scanf("%s",nome);
	 
	   q = decimal;
	 
	   while (q != 0)
	   {
	   r = q % 16;          
	   if (r < 10)
	   hexadecimal[j++] = 48 + r;   
	   else
	   hexadecimal[j++] = 55 + r;   
	   q = q / 16;            
	   }
	   printf("Bem-vindo %s ",nome);
	   printf("Esta e sua matricula em hexadecimal :",decimal);
	   
	 
	 
	  for (i = j; i >= 0; i--)
	  printf("%c", hexadecimal[i]);
	  printf("\n");
	 }
	   else{ 
	   printf("\nComando invalido, por favor digite outro numero: ");
       } 
    //Opcoes a serem repetidas + Leitor de variavel
	a = menu();
	   

	  if (a==0){       //Finalizando o programa
	printf("Programa finalizado.");
    }
}
    system("cls");
 	return 0;
 }
